<%- include('../partials/header.ejs') %>

<div class="page-wrapper">

  <!-- Breadcrumb -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex align-items-center">
        <h4 class="page-title">Edit ExtraCategory</h4>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card shadow">

          <form method="POST"
                action="/extracategory/edit-extracategory/<%= data._id %>"
                enctype="multipart/form-data">

            <div class="card-body">

              <!-- ExtraCategory Name -->
              <div class="mb-3">
                <label class="form-label">ExtraCategory Name</label>
                <input type="text"
                       name="name"
                       value="<%= data.name %>"
                       class="form-control"
                       required>
              </div>

              <!-- SubCategory -->
              <div class="mb-3">
                <label class="form-label">Select SubCategory</label>
                <select name="subCategory" class="form-select" required>
                  <% subCategories.forEach(sc => { %>
                    <option value="<%= sc._id %>"
                      <%= String(sc._id) === String(data.subCategory) ? 'selected' : '' %>>
                      <%= sc.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Current Image -->
              <div class="mb-3">
                <label class="form-label d-block">Current Image</label>
                <img src="/<%= data.image %>"
                     width="90"
                     class="img-thumbnail">
              </div>

              <!-- New Image -->
              <div class="mb-3">
                <label class="form-label">Upload New Image</label>
                <input type="file"
                       name="image"
                       class="form-control">
              </div>

            </div>

            <div class="card-footer text-end">
              <a href="/view-extracategory" class="btn btn-secondary">Back</a>
              <button type="submit" class="btn btn-primary">
                Update ExtraCategory
              </button>
            </div>

          </form>

        </div>

      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
