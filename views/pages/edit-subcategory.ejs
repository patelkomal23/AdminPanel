<%- include('../partials/header.ejs') %>

<div class="page-wrapper">

  <!-- ================= Breadcrumb ================= -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex align-items-center">
        <h4 class="page-title">Edit SubCategory</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/view-subcategory">SubCategory</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- ================= Content ================= -->
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card shadow">

          <!-- ✅ FORM START -->
          <form method="POST"
                action="/subcategory/edit-subcategory/<%= data.id %>"
                enctype="multipart/form-data">

            <div class="card-body">

              <!-- SubCategory Name -->
              <div class="mb-3">
                <label class="form-label">SubCategory Name</label>
                <input type="text"
                       name="name"
                       value="<%= data.name %>"
                       class="form-control"
                       required>
              </div>

              <!-- ✅ Category Dropdown -->
              <div class="mb-3">
                <label class="form-label">Select Category</label>
                <select name="category" class="form-select" required>
                  <% categories.forEach(cat => { %>
                    <option value="<%= cat._id %>"
                      <%= String(cat._id) === String(data.category) ? 'selected' : '' %>>
                      <%= cat.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Current Image -->
              <div class="mb-3">
                <label class="form-label d-block">Current Image</label>
                <img src="/<%= data.image %>"
                     alt="SubCategory"
                     width="90"
                     class="img-thumbnail">
              </div>

              <!-- Upload New Image -->
              <div class="mb-3">
                <label class="form-label">Upload New Image</label>
                <input type="file"
                       name="image"
                       class="form-control">
              </div>

            </div>

            <!-- Footer -->
            <div class="card-footer text-end">
              <a href="/view-subcategory" class="btn btn-secondary">
                Back
              </a>
              <button type="submit" class="btn btn-primary">
                Update SubCategory
              </button>
            </div>

          </form>
          <!-- ✅ FORM END -->

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
