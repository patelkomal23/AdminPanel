<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
/* Prevent Matrix admin from breaking input styles */
.review-section .form-control {
    border: 1px solid #ccc !important;
    border-radius: 10px !important;
    padding: 12px !important;
    width: 100% !important;
    background: #fff !important;
    box-shadow: none !important;
}

/* Fix textarea height */
.review-section textarea.form-control {
    min-height: 130px !important;
}

/* Focus style */
.review-section .form-control:focus {
    border-color: #007bff !important;
    box-shadow: 0 0 6px rgba(0, 123, 255, 0.4) !important;
}

/* Submit button */
.review-section .btn-primary {
    padding: 12px 25px;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
}

/* Wrap whole review box */
.review-section {
    background: #f9f9f9;
    padding: 25px;
    border-radius: 12px;
    border: 1px solid #eee;
    margin-top: 30px;
}

/* Review card */
.review-card {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 12px;
    margin-bottom: 15px;
    background: #fff;
}
</style>

<div class="container mt-4">

  <div class="row">
    <div class="col-md-5 text-center product-image">
      <img src="/<%= product.image %>" class="img-fluid rounded border" width="320">
    </div>

    <div class="col-md-7">
      <h2 class="product-title"><%= product.name %></h2>

      <p>
        <span class="badge bg-info">Category: <%= product.category.name %></span>
        <span class="badge bg-warning">Subcat: <%= product.subcategory.name %></span>
        <span class="badge bg-success">Extra: <%= product.extracategory.name %></span>
      </p>

      <h3 class="product-price">₹ <%= product.price %></h3>

      <p><strong>⭐ <%= avgRating.toFixed(1) %></strong> / 5 (<%= reviews.length %> reviews)</p>

      <button class="btn btn-warning me-2">ADD TO CART</button>
      <button class="btn btn-danger">BUY NOW</button>
       <div class="review-section">

    <h3>Customer Reviews</h3>
    <hr>

    <% if (reviews.length === 0) { %>
      <p class="text-muted">No reviews yet. Be the first!</p>
    <% } %>

    <% reviews.forEach(r => { %>
      <div class="review-card">
        <h5><%= r.username %></h5>
        <p><i class="bi bi-star-fill"style="color: #FFD43B;"></i> <%= r.rating %> / 5</p>
        <p><%= r.comment %></p>
        <small class="text-muted"><%= r.createdAt.toDateString() %></small>
      </div>
    <% }) %>

    <hr>

    <h4>Add Your Review</h4>

  <form action="/product/<%= product._id %>/add-review" method="POST" class="mt-3">

  <!-- Name -->
  <div class="mb-3">
    <label class="form-label">Your Name</label>
    <input 
      type="text" 
      name="username" 
      class="form-control" 
      required
    >
  </div>

  <!-- Rating -->
  <div class="mb-3">
    <label class="form-label"><i class="bi bi-star-fill"style="color: #FFD43B;"></i> Rating</label>
    <select name="rating" class="form-select" required>
      <option value="">Select Rating</option>
      <option value="1">1 Star</option>
      <option value="2">2 Star</option>
      <option value="3">3 Star</option>
      <option value="4">4 Star</option>
      <option value="5">5 Star</option>
    </select>
  </div>

  <!-- Comment -->
  <div class="mb-3">
    <label class="form-label">Your Review</label>
    <textarea 
      name="comment" 
      class="form-control" 
      rows="3" 
      required
    ></textarea>
  </div>

  <!-- Submit Button -->
  <button class="btn btn-primary">Submit Review</button>

</form>


  </div>

      <hr>
    </div>
    
  </div>

  <!-- REVIEW SECTION -->
 

</div>

<%- include('../partials/footer.ejs') %>
